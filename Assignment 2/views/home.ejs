<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/css/styles.css">
</head>
<body>
    <h1 class="heading">Book Store App</h1>

    <h2>Books List</h2>
    <table id="bookTable" class="books-table">
        <thead>
            <tr>
                <th>Book ID</th>
                <th>Title</th>
                <th>Author</th>
            </tr>
        </thead>
        <tbody>
            <% books.forEach((book)=> { %>
                <tr>
                    <td><%= book.BookID %></td>
                    <td><%= book.Title %></td>
                    <td><%= book.Author %></td>
                </tr>
            <% }); %>
        </tbody>
    </table>

    <!-- Add New Book -->
    <div class="actions-container">
        <a href="/create">
            <button>Create Book</button>
        </a>

        <!-- Update Book -->
        <a href="/update">
            <button>Update Book</button>
        </a>

        <!-- Delete Book -->
        <a href="/delete">
            <button>Delete Book</button>
        </a>
    </div>
</body>
</html>